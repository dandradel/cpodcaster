{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "setupFiles": ["<rootDir>/src/shared/test/test-utils.tsx"],
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "\\.(css|less)$": "<rootDir>/src/shared/test/jest/__mocks__/styleMock.json"
  }
}
